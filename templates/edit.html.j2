{% extends "layout.html.j2" %}

{% block title %}Editar tarefa{% endblock %}

{% block content %}
    <form action="" method="POST">
        <div>
            <label for="description">Descrição</label>
            <input type="text" placeholder="Digite a descrição da tarefa" name="description" id="description" value="{{ todo.description }}">
        </div>

        <div>
            <label for="status">Status</label>
            <select name="status" id="status">
                <option value="opened" {{ 'selected' if todo.status == 'opened' else '' }}>Aberto</option>
                <option value="closed" {{ 'selected' if todo.status == 'closed' else '' }}>Fechado</option>
            </select>
        </div>

        <div>
            <ul class="error-list">
                {% for error in errors %}
                    <li>
                        {{ error }}
                    </li>
                {% endfor %}
            </ul>
        </div>

        <button type="submit">Salvar</button>
    </form>
{% endblock %}