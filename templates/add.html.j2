{% extends "layout.html.j2" %}

{% block title %}Adicionar tarefa{% endblock %}

{% block content %}
    <form action="" method="POST">
        <div>
            <label for="description">Descrição</label>
            <input type="text" placeholder="Digite a descrição da tarefa" name="description" id="description">
        </div>

        <div>
            <ul class="error-list">
                {% for error in errors %}
                    <li>
                        {{ error }}
                    </li>
                {% endfor %}
            </ul>
        </div>

        <button type="submit">Adicionar</button>
    </form>
{% endblock %}